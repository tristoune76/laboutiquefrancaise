{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
    <h1>
        {{ product.name}}
    </h1>
    <div class="row">
        <div class = "col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.illustration }}" class="img-fluid">
        </div>
        <div class = "col-md-7 m-auto">
            <h3>{{ product.name }}</h3>
            <p>{{  product.subtitle }}</p>
            <span class = "product-page">{{ (product.prix /100)|number_format(2, ',', '.') }} â‚¬</span>
            <hr>
            <p>
                {{ product.description }}
            </p>
            <a href="{{ path('add-to-cart', {'id': product.id}) }}" class="btn btn-primary">Ajoutez au panier</a>

        </div>
    </div>

{% endblock %}
